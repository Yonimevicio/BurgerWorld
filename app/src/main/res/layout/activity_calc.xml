<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yonimevicio.calculadora.Calc">


<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="12">
    <TextView
        android:textAlignment="textEnd"
        android:layout_weight="15"
        android:textSize="40dp"
        android:id="@+id/pantalla_numeros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TableRow>
        <Button
            android:layout_weight="3"
            android:id="@+id/siete"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="7"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/ocho"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="8"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/nueve"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="9"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/limpiar"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="C"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/borrar"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Del"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_weight="3"
            android:id="@+id/cuatro"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="4"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/cinco"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="5"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/seis"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="6"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/multi"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="*"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/div"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="/"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_weight="3"
            android:id="@+id/uno"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/dos"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="2"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/tres"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="3"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/mas"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="+"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/menos"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="-"/>
    </TableRow>
    <TableRow >
        <Button
            android:layout_weight="6"
            android:id="@+id/cero"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/punto"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="."/>
        <Button
            android:layout_weight="3"
            android:id="@+id/ans"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="ANS"/>
        <Button
            android:layout_weight="3"
            android:id="@+id/igual"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="="/>
    </TableRow>
    <TableRow >
        <ImageView
            android:id="@+id/llamar"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/call"
            />
    </TableRow>
</TableLayout>

</RelativeLayout>
